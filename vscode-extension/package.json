{
	"name": "zenscript-language-server",
	"description": "ZenScript Language Server",
	"author": "raylras",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Raylras/zenscript-language-server"
	},
	"publisher": "raylras",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:zenscript",
		"onCommand:zenscript.restartServer"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "zenscript",
				"aliases": [
					"ZenScript",
					"zenscript"
				],
				"extensions": [
					".zs"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zenscript",
				"scopeName": "source.zenscript",
				"path": "./language/zenscript.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "zenscript.restartServer",
				"title": "Restart ZenScript language server",
				"category": "ZenScript"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"yaml2json": "cd ./src && yamljson zenscript.tmLanguage.yaml > ../language/zenscript.tmLanguage.json",
		"buildServer": "cd .. && gradlew build",
		"copyServer": "@powershell cp ../build/libs/zenscript-language-server-*-all.jar ./server/zenscript-language-server.jar",
		"build": "npm install && npm run buildServer && npm run copyServer && npm run yaml2json && vsce package"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.1"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.56.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.7.2",
		"vsce": "^2.9.2",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"yamljson": "^1.0.70"
	}
}
