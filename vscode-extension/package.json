{
	"name": "zenscript-language-server",
	"description": "ZenScript Language Server",
	"author": "raylras",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "Raylras",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.56.0"
	},
	"activationEvents": [
		"onLanguage:zenscript",
		"onCommand:zenscript.restartServer"
	],
	"main": "./dist/extension",
	"contributes": {
		"languages": [
			{
				"id": "zenscript",
				"aliases": [
					"ZenScript",
					"zenscript"
				],
				"extensions": [
					".zs"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zenscript",
				"scopeName": "source.zenscript",
				"path": "./language/zenscript.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "zenscript.restartServer",
				"title": "Restart ZenScript language server",
				"category": "ZenScript"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm install && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"yaml2json": "cd ./src && yamljson zenscript.tmLanguage.yaml > ../language/zenscript.tmLanguage.json",
		"buildServer": "cd .. && gradlew build",
		"copyServer": "@powershell cp ../build/libs/zenscript-language-server-*-all.jar ./server/zenscript-language-server.jar",
		"build": "npm run buildServer && npm run copyServer && npm run yaml2json && vsce package"
	},
	"devDependencies": {
		"@types/node": "^14.17.3",
		"@types/vscode": "^1.56.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.3.2",
		"vsce": "^2.9.2",
		"vscode-jsonrpc": "^6.0.0",
		"vscode-languageclient": "^7.0.0",
		"yamljson": "^1.0.70"
	}
}
