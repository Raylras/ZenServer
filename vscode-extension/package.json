{
	"name": "zenscript-intelli-sense",
	"displayName": "ZenScript IntelliSense",
	"description": "Code IntelliSense for ZenScript",
	"author": "raylras",
	"license": "MIT",
	"version": "0.13.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/raylras/zenscript-intelli-sense"
	},
	"publisher": "raylras",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		""
	],
	"engines": {
		"vscode": "^1.81.0"
	},
	"activationEvents": [
		"onLanguage:zenscript",
		"onDebugInitialConfigurations",
		"onDebugResolve:zenscript",
		"onDebugDynamicConfigurations:zenscript"
	],
	"icon": "./icon/zs.webp",
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "zenscript",
				"aliases": [
					"ZenScript"
				],
				"extensions": [
					".zs",
					".dzs"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zenscript",
				"scopeName": "source.zs",
				"path": "./language/ZenScript.tmLanguage.json"
			}
		],
		"breakpoints": [
			{
				"language": "zenscript"
			}
		],
		"configuration": {
			"title": "ZenScript Language Server",
			"properties": {
				"zenscript.languageServer.debug": {
					"order": 0,
					"type": "boolean",
					"default": false,
					"description": "Enable/disable debug mode for language server"
				},
				"zenscript.languageServer.suspend": {
					"order": 1,
					"type": "boolean",
					"default": false,
					"description": "Suspend to wait for the debugger to attach for language server"
				},
				"zenscript.debugAdapter.debug": {
					"order": 2,
					"type": "boolean",
					"default": false,
					"description": "Enable/disable debug mode for debug adapter"
				},
				"zenscript.debugAdapter.suspend": {
					"order": 3,
					"type": "boolean",
					"default": false,
					"description": "Suspend to wait for the debugger to attach for debug adapter"
				},
				"zenscript.languageServer.javaHome": {
					"order": 4,
					"type": "string",
					"default": null,
					"description": "Path of java home"
				}
			}
		},
		"debuggers": [
			{
				"type": "zenscript",
				"label": "ZenScript",
				"configurationAttributes": {
					"attach": {
						"required": [
							"projectRoot",
							"hostName",
							"port",
							"timeout"
						],
						"properties": {
							"projectRoot": {
								"type": "string",
								"description": "Absolute path to your project's root folder. If you want to debug a subproject, specify the root/top-level directory here and the relative path in the 'subproject' attribute.",
								"default": "${workspaceFolder}"
							},
							"hostName": {
								"type": "string",
								"description": "The host name of your running JVM.",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "The port number of your running JVM.",
								"default": 8000
							},
							"timeout": {
								"type": "number",
								"description": "The connection timeout.",
								"default": 30000
							},
							"scriptsPath": {
								"type": "string",
								"description": "The path relative to 'scripts' folder",
								"default": false
							}
						}
					}
				},
				"configurationSnippets": [
					{
						"label": "ZenScript: Attach VM",
						"description": "Attaches a debugger to a running JVM",
						"body": {
							"type": "zenscript",
							"request": "attach",
							"name": "ZenScript Attach",
							"projectRoot": "^\"\\${workspaceFolder}\"",
							"hostName": "localhost",
							"port": 8000,
							"timeout": 30000
						}
					}
				],
				"initialConfigurations": [
					{
						"type": "zenscript",
						"request": "attach",
						"name": "ZenScript Attach",
						"projectRoot": "${workspaceFolder}",
						"hostName": "localhost",
						"port": 8000,
						"timeout": 30000
					}
				]
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"vscode:prepublish": "npm run yaml2json && npm run prod",
		"yaml2json": "yaml2json ./language/ZenScript.tmLanguage.yaml | json-minify > ./language/ZenScript.tmLanguage.json",
		"prod": "rollup --config ./rollup.config.prod.mjs --environment BUILD:production",
		"dev": "rollup --config ./rollup.config.dev.mjs --environment BUILD:development"
	},
	"dependencies": {
		"@viperproject/locate-java-home": "^1.1.13",
		"@vscode/debugadapter": "^1.63.0",
		"dayjs": "^1.11.9",
		"vscode-languageclient": "^9.0.0"
	},
	"devDependencies": {
		"@odiak/yaml-to-json": "^0.0.1",
		"@rollup/plugin-commonjs": "^25.0.4",
		"@rollup/plugin-node-resolve": "^15.2.1",
		"@rollup/plugin-terser": "^0.4.3",
		"@types/node": "^20.5.1",
		"@types/vscode": "^1.81.0",
		"@vscode/vsce": "^2.21.0",
		"json-minify": "^1.0.0",
		"rollup": "^3.29.3"
	}
}
